# API Gateway Environment Variables

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# PostgreSQL (same as Facebook-automation main app)
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Core API URL (Facebook-automation backend)
CORE_API_URL=https://your-facebook-automation.railway.app

# MongoDB - Invoice Generator
MONGO_URL_INVOICE=mongodb+srv://user:pass@cluster.mongodb.net/
MONGO_DB_INVOICE=invoice_generator

# MongoDB - Scriptclient
MONGO_URL_SCRIPTCLIENT=mongodb+srv://user:pass@cluster.mongodb.net/
MONGO_DB_SCRIPTCLIENT=scriptclient

# MongoDB - Audit Sales
MONGO_URL_AUDIT_SALES=mongodb+srv://user:pass@cluster.mongodb.net/
MONGO_DB_AUDIT_SALES=audit_sales

# MongoDB - Ads Alert
MONGO_URL_ADS_ALERT=mongodb+srv://user:pass@cluster.mongodb.net/
MONGO_DB_ADS_ALERT=ads_alert

# Server
PORT=8001
